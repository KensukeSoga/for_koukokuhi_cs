<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Parameter SYSTEM "Parameter.dtd" [

  <!-- Runtime格納ディレクトリ -->
  <!ENTITY Runtime.Path	"@runtime.base.dir@">

]>
<Parameter kind="Security">

    <!--JNDI名-->
    <Item Name="jndiName" Value="RemoteSecurityContextBean"/>

    <!--一括/単体区分 一括なら真-->
    <Item Name="createApplicationByList" Value="true"/>

    <!--キャッシュ 使用するなら真-->
    <Item Name="cacheMode" Value="true"/>

    <!--xmlセキュリティ定義ファイル-->
    <!--dummySecurityモードにしたい場合、開発機では↓ではなく「C:\ns\bea\weblogic81\config\wsyosettei01\startWeblogic.bat」を書き換える必要がある-->
    <Item Name="dummySecurityXML" Value="&Runtime.Path;/dummySecurity.xml"/>

    <!--使用するファクトリ名(FQDN)-->
    <!--
    <Item Name="factory" Value="jp.co.isid.nj.security.impl.xml.XMLSecurityContextFactory"/>
    <Item Name="factory" Value="jp.co.isid.nj.security.impl.ejb.EJBSecurityContextFactory"/>
    -->
    <Item Name="factory" Value="jp.co.isid.nj.security.impl.ldap.LDAPSecurityContextFactory"/>

    <!--セキュリティロール定義(FQDN)-->
    <Item Name="Role.000" Value="jp.co.isid.nj.security.impl.base.role.BaseLicensingRole"/>
    <Item Name="Role.010" Value="jp.co.isid.nj.security.impl.base.role.BaseFunctionRole"/>
    <Item Name="Role.021" Value="jp.co.isid.nj.security.impl.base.role.BaseAbsoluteAuthorityRole"/>
    <Item Name="Role.022" Value="jp.co.isid.nj.security.impl.base.role.BaseRelativeAuthorityRole"/>
    <Item Name="Role.090" Value="jp.co.isid.nj.security.impl.base.role.BaseTantoGroupRole"/>
    <Item Name="Role.091" Value="jp.co.isid.nj.security.impl.base.role.BaseUserSpecificationRole"/>
    <Item Name="Role.023" Value="jp.co.isid.nj.security.impl.base.role.BaseSelfOrganizationDataRole"/>
    <Item Name="Role.024" Value="jp.co.isid.nj.security.impl.base.role.BaseUnderSelfOrganizationDataRole"/>

    <Item Name="ssoFilter.1" Value="jp.co.isid.nj.sso.filter.OrganizationDialog"/>
    <Item Name="ssoFilter.2" Value="jp.co.isid.nj.sso.filter.CheckEmergencyStop"/>
    <Item Name="ssoFilter.3" Value="jp.co.isid.mpr.common.security.MprSecurityFilter"/>

  <!-- SSOフィルタ定義 -->
  <Item Name="ssoFilter.1" Value="jp.co.isid.nj.sso.filter.OrganizationDialog"/>
  <Item Name="ssoFilter.2" Value="jp.co.isid.nj.sso.filter.CheckEmergencyStop"/>

  <!--
  各JNDI環境で必要なプロパティ
  書式は"env.<その環境で必要なプロパティ名>"
  -->

    <Item Name="env.java.naming.factory.initial" Value="weblogic.jndi.WLInitialContextFactory"/>
    <Item Name="env.java.naming.provider.url" Value="t3://localhost/7001"/>
    <Item Name="env.java.naming.security.principal" Value="admin"/>
    <Item Name="env.java.naming.security.credentials" Value="password"/>

</Parameter>
