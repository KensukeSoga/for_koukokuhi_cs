<?xml version="1.0" encoding="SHIFT_JIS"?>
<!DOCTYPE invoker-definitions>

<invoker-definitions>

  <!-- デフォルトで実行されるInvoker定義用（forServerと同一） -->
  <!-- 本当は明示的に指定したほうがいい -->
  <invoker name="default" type="simple">
    <filters>
      <!-- トランザクションFilter -->
      <filter name="transaction"
        class="jp.co.isid.nj.controller.command.transaction.TransactionFilter"/>
    </filters>
  </invoker>

  <!-- Server側で実行されるInvoker定義用 -->
  <invoker name="forServer" type="simple">
    <filters>
      <!-- トランザクションFilter -->
      <filter name="transaction"
        class="jp.co.isid.nj.controller.command.transaction.TransactionFilter"/>
    </filters>
  </invoker>

</invoker-definitions>
