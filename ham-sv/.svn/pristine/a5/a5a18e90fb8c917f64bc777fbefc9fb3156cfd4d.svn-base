<?xml version="1.0" encoding="SHIFT_JIS"?>

<!--DOCTYPE Parameter SYSTEM "Parameter.dtd"-->
<!--★Pathの一括変換用の為、仮DTDを内部サブセット定義-->
<!DOCTYPE Parameter[
   <!ENTITY xmlpath_win "@runtime.base.dir@/">
   <!ENTITY xmlpath_unix "/ns/Runtime/hf/">
   <!ENTITY logpath_win "@server.app.log.dir@/">
   <!ENTITY logpath_unix "/ns/logs/hf/">
   <!ENTITY domain_name "hf">
]>

<Parameter kind="IS">
  <!-- システムコード -->
  <Item Name="SystemCode" Value="IS"/>
  <!-- ★エラーメッセージ関連 -->
  <Item Name="ErrorMessageFileForWin"
        Value="&xmlpath_win;IsErrorMessage.xml"/>
  <Item Name="ErrorMessageFileForUnix"
        Value="&xmlpath_unix;IsErrorMessage.xml"/>
  <!-- データベースアクセス -->
  <Item Name="DataSourceUse" Value="false"/>
  <Item Name="DataSourceName" Value=""/>
  <!-- SQL関係 -->
  <Item Name="SQLLogDirForWin" Value="&logpath_win;sqlLog"/>
  <Item Name="SQLLogDirForUnix" Value="&logpath_unix;sqlLog_&domain_name;"/>
  <Item Name="SQLLogWarningOnly" Value="false"/>
  <Item Name="SQLLogMode" Value="true"/>

  <!-- ★XML関係 -->
  <Item Name="ExceptionListForWin" Value="&xmlpath_win;ExHandler.xml"/>
  <Item Name="ExceptionListForUnix" Value="&xmlpath_unix;ExHandler.xml"/>
  <Item Name="DummyUserFileForWin" Value="&xmlpath_win;DummyUser.xml"/>
  <Item Name="DummyUserFileForUnix" Value="&xmlpath_unix;DummyUser.xml"/>

  <!-- 開発用に0.5秒以上はログを書きます。 -->
  <Item Name="SQLWarningLevel" Value="1000"/>
  <Item Name="PoolRetryCount" Value="5"/>
  <Item Name="PoolRetryWait" Value="1000"/>
  <Item Name="JDBCRetryCount" Value="5"/>
  <Item Name="JDBCRetryWait" Value="500"/>
  <Item Name="SystemNameList" Value="フレームワーク,Webフレームワーク,新勤務システム,個人情報ファイル管理,サンプル"/>
  <Item Name="SystemIDList" Value="IS,WEB,LABOR,CRYPT,SAMPLE"/>

  <!-- EsqLogin.jsp Use Gif  -->
  <Item Name="gifBaseUrl"
      Value="http://esqgif.dentsu.co.jp/portalImage/"/>
  <Item Name="cssBaseUrl"
      Value="http://esqgif.dentsu.co.jp/cssjs/"/>
  <Item Name="gifBaseSecureUrl"
      Value="https://esqgif.dentsu.co.jp/portalImage/"/>
  <Item Name="cssBaseSecureUrl"
      Value="https://esqgif.dentsu.co.jp/cssjs/"/>

  <!-- 暗号モード 0:RSA、1:ESQ、2:NonCrypt -->
  <Item Name="CryptMode"
      Value="1"/>
  <!-- 認証モード 0.EDS 1.Oracle -->
  <Item Name="CertifyingMode"
      Value="0"/>

  <!-- CookieDomainのセット IPアドレスでブラウザから開発端末へアクセスする場合はfalseで無いと飛ばない. -->
  <Item Name="SetSsoCookie_Domain"
      Value="@sso.cookie.domain@"/>

  <!-- SSO Cookie のNameを指定します. (開発用に変更しています)  -->
  <Item Name="Sso_CookieName"
      Value="@sso.cookie.name@"/>

  <!-- ログイン画面のフッター -->
  <!-- 改行は &lt;BR&qt; と記述します -->
  <Item Name="FooterMsg"
      Value="Copyright 2003-2006 DENTSU INC. All rights reserved."/>

</Parameter>
